# Reload dotfiles
alias .reload="python3 ~/.dotfiles/scripts/reload.py && zsh"

# Navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias home="cd ~/"
alias h="home"
alias dev="cd ~/dev"
alias tmp="cd ~/tmp"

# ls
alias la="ls -a"
alias lsla="ls -la"

# Programs
vim() {
  if command -v nvim >/dev/null 2>&1; then
    nvim "$@"
  else
    command vim "$@"
  fi
}

alias g="git "
alias gs="git status"
alias ga="git add "
alias gc="git commit -m "
alias gp="git push "
alias python="python3"
alias py="python3"
pym() {
    python3 main.py "$@"
}

# Print each PATH entry on a separate line
alias path='echo -e ${PATH//:/\\n}'

